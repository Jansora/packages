{
  "name": "@jansora/bytemd",
  "version": "0.0.20",
  "description": "bytemd editor",
  "license": "MIT",
  "keywords": [
    "bytemd",
    "jansora"
  ],
  "main": "./esm/index.js",
  "module": "./esm/index.js",
  "repository": "https://github.com/jansora/packages/npm/packages/monaco",
  "bugs": "https://github.com/jansora/packages/issues",
  "author": "Jansora <zhangyue1936@gmail.com> (https://www.jansora.com)",
  "files": [
    "esm"
  ],
  "type": "module",
  "dependencies": {
    "@babel/runtime": "^7.18.6",
    "@bytemd/plugin-breaks": "1.20.2",
    "@bytemd/plugin-frontmatter": "1.20.2",
    "@bytemd/plugin-gemoji": "1.20.2",
    "@bytemd/plugin-gfm": "1.20.2",
    "@bytemd/plugin-highlight-ssr": "1.20.2",
    "@bytemd/plugin-import-image": "^1.3.2",
    "@bytemd/plugin-math-ssr": "1.20.2",
    "@bytemd/plugin-medium-zoom": "1.20.2",
    "@bytemd/plugin-mermaid": "1.20.2",
    "@bytemd/react": "1.20.2",
    "react": "18.2.0",
    "rehype-prism-plus": "^1.6.3",
    "remark-code-title": "^0.2.5",
    "remark-directive": "^3.0.0",
    "remark-flexible-code-titles": "^1.1.4",
    "remark-iframes": "^4.0.5",
    "remark-oembed": "^1.2.2"
  },
  "scripts": {
    "bundle": "ncc build src/index.tsx --target web --filename codemirror && npm run bundle:min",
    "bundle:watch": "ncc watch src/index.tsx --target web --filename codemirror",
    "bundle:min": "ncc build src/index.tsx --target web --filename codemirror --minify",
    "watch": "tsbb watch src/*.tsx --use-babel",
    "build": "tsbb build src/*.tsx --use-babel",
    "css:build": "compile-less -d src -o esm && compile-less -d src -o cjs",
    "css:watch": "compile-less -d src -o esm --watch",
    "css:build:dist": "compile-less -d src --combine lib/dist.css --rm-global"
  },
  "xo": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^18.2.46",
    "compile-less-cli": "^1.8.13"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ]
  }
}
