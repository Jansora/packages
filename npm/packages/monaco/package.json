{
  "name": "@jansora/monaco",
  "version": "0.0.17",
  "description": "monaco editor",
  "license": "MIT",
  "keywords": [
    "monaco",
    "jansora"
  ],
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "repository": "https://github.com/jansora/packages/npm/packages/monaco",
  "bugs": "https://github.com/jansora/packages/issues",
  "author": "Jansora <zhangyue1936@gmail.com> (https://www.jansora.com)",
  "files": [
    "dist",
    "src",
    "esm",
    "cjs"
  ],
  "type": "module",
  "dependencies": {
    "@babel/runtime": "^7.18.6",
    "react": "18.2.0"
  },
  "scripts": {
    "bundle": "ncc build src/index.tsx --target web --filename codemirror && npm run bundle:min",
    "bundle:watch": "ncc watch src/index.tsx --target web --filename codemirror",
    "bundle:min": "ncc build src/index.tsx --target web --filename codemirror --minify",
    "watch": "tsbb watch src/*.tsx --use-babel",
    "build": "tsbb build src/*.tsx --use-babel",
    "css:build": "compile-less -d src -o esm && compile-less -d src -o cjs",
    "css:watch": "compile-less -d src -o esm --watch",
    "css:build:dist": "compile-less -d src --combine lib/dist.css --rm-global"
  },
  "xo": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/react": "^18.2.46",
    "compile-less-cli": "^1.8.13"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ]
  }
}
